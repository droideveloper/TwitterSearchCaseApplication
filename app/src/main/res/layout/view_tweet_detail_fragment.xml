<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:support="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/viewTweetImage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    support:layout_constraintLeft_toLeftOf="parent"
    support:layout_constraintRight_toRightOf="parent"
    support:layout_constraintTop_toTopOf="parent"
    android:background="#333"
    android:minHeight="228dp"
    android:maxHeight="228dp" />

  <TextView
    android:id="@+id/viewTweetTitle"
    support:layout_constraintLeft_toLeftOf="parent"
    android:layout_margin="4dp"
    support:layout_constraintRight_toRightOf="parent"
    support:layout_constraintTop_toBottomOf="@+id/viewTweetImage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textSize="22sp" />

  <TextView
    android:layout_margin="4dp"
    android:id="@+id/viewTweetTime"
    android:textSize="14sp"
    android:layout_width="0dp"
    android:gravity="right"
    android:layout_height="wrap_content"
    support:layout_constraintLeft_toLeftOf="parent"
    support:layout_constraintRight_toRightOf="parent"
    support:layout_constraintTop_toBottomOf="@+id/viewTweetTitle" />


</android.support.constraint.ConstraintLayout>